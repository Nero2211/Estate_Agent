<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.nero.estateagent.FavouritePropertyFragment.FavouriteDescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/brown">

        <ImageView
            android:id="@+id/favourite_goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:tint="@color/white"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Favourite Property Description"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fav_description_streetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="STREET NAME"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/green"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/parentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/favourites_description_image"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/testthumbnail"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/favourite_description_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                </LinearLayout>

            </FrameLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/titlesLayoutFav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/favourite_description_title1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Property Price"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/favourite_description_title2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bedrooms"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/titlesLayoutFav">

                    <TextView
                        android:id="@+id/favourite_description_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Â£160,000"
                        android:layout_weight="1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/favourite_description_bedrooms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="5"
                        android:layout_weight="1"
                        android:textColor="@color/black"  />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/titlesLayoutFav2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/favourite_description_title6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/favourite_description_title5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Property type"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"  />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/titlesLayoutFav7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/titlesLayoutFav2">

                    <TextView
                        android:id="@+id/favourite_description_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Description"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                        <TextView
                        android:id="@+id/favourite_description_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Description"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/titlesLayoutFav3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titlesLayoutFav7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/favourite_description_title7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agent name"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/titlesLayoutFav4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titlesLayoutFav3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/favourite_description_agentname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Description"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/titlesLayoutFav4">
                    <TextView
                        android:id="@+id/favourite_description_title8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agent address"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/favourite_description_agentaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="15dp" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/favourite_description_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customborder">

                <ScrollView
                    android:id="@+id/childScroll"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                        <TextView
                            android:id="@+id/favourite_description_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="This is the description textview which will be used property."
                            android:textColor="@color/black" />

                </ScrollView>

            </RelativeLayout>

            <TextView
                android:id="@+id/favourite_description_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Property Location"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <fragment
                android:id="@+id/favouritemap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="10dp" />




        </LinearLayout>

    </ScrollView>

        <Button
            android:id="@+id/favourite_description_remove"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="REMOVE"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:background="@color/green"
            android:textSize="30dp" />

    </FrameLayout>

</LinearLayout>
